{
  "name": "robotstxt-webpack-plugin",
  "version": "4.0.0",
  "description": "A webpack plugin to output a robots.txt file",
  "license": "MIT",
  "author": "itgalaxy <development@itgalaxy.company>",
  "contributors": [
    {
      "name": "Alexander Krasnoyarov",
      "email": "alexander.krasnoyarov@itgalaxy.company",
      "url": "https://vk.com/sterling_archer"
    }
  ],
  "repository": {
    "type": "https",
    "url": "https://github.com/itgalaxy/robotstxt-webpack-plugin"
  },
  "keywords": [
    "robots.txt",
    "robots",
    "robotstxt",
    "generate",
    "robots-txt",
    "user-agent",
    "webpack",
    "webpack-plugin",
    "plugin"
  ],
  "bugs": {
    "url": "https://github.com/itgalaxy/robotstxt-webpack-plugin/issues"
  },
  "main": "dist/RobotstxtWebpackPlugin.js",
  "files": [
    "dist",
    "!**/__tests__"
  ],
  "engines": {
    "node": ">= 4.3 < 5.0.0 || >= 5.10"
  },
  "dependencies": {
    "generate-robotstxt": "^5.0.0",
    "nodeify": "~1.0.0"
  },
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.9.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.9.0",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-itgalaxy": "^57.0.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-lodash": "^2.4.3",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-unicorn": "^3.0.0",
    "npmpub": "^3.1.0",
    "npm-run-all": "^4.0.0",
    "nyc": "^11.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-itgalaxy": "^12.0.0",
    "webpack": "^3.0.0",
    "husky": "^0.14.0",
    "lint-staged": "^5.0.0",
    "prettier": "^1.5.2"
  },
  "peerDependencies": {
    "webpack": "^1.13.2 || ^2.0.0 || ^3.0.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint:prettier": "prettier --list-different '{src,__tests__}/**/*.{js,jsx,md}' '!src/__tests__/build/**' '*.{js,md}'",
    "lint:remark": "remark . -i .gitignore -f -q",
    "lint:eslint": "eslint . '.*.js' --ignore-path .gitignore --ext '.js,.jsx'",
    "lint": "npm-run-all -l -p 'lint:**'",
    "fix:prettier": "prettier --write '{src,__tests__}/**/*.{js,jsx,md}' '!src/__tests__/build/**' '*.{js,md}'",
    "fix:eslint": "eslint . '.*.js' --fix --ignore-path .gitignore --ext '.js,.jsx'",
    "fix": "npm-run-all -l -p 'fix:**'",
    "pretest": "npm run lint",
    "test-only": "nyc ava --verbose '**/__tests__/*.js'",
    "test": "npm run test-only",
    "prebuild": "del dist",
    "build": "babel src --out-dir dist --ignore /__tests__/",
    "prepublish": "npm run build",
    "release": "npmpub"
  },
  "ava": {
    "require": "babel-register",
    "concurrency": 5,
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "4.3"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "sort-keys": "off"
    },
    "extends": [
      "plugin:itgalaxy/ava",
      "plugin:itgalaxy/esnext",
      "plugin:itgalaxy/node"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js",
          "src/**/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features": "off"
        }
      }
    ],
    "root": true
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-itgalaxy"
    ]
  }
}
