{
    "name": "robotstxt-webpack-plugin",
    "version": "1.0.1",
    "description": "A webpack plugin to output a robots.txt file",
    "license": "MIT",
    "author": "itgalaxy <development@itgalaxy.company>",
    "contributors": [
        {
            "name": "Alexander Krasnoyarov",
            "email": "alexander.krasnoyarov@itgalaxy.company",
            "url": "https://vk.com/sterling_archer"
        }
    ],
    "repository": {
        "type": "https",
        "url": "https://github.com/itgalaxy/robotstxt-webpack-plugin"
    },
    "keywords": [
        "robots.txt",
        "robots",
        "robotstxt",
        "generate",
        "robots-txt",
        "user-agent",
        "webpack",
        "webpack-plugin",
        "plugin"
    ],
    "bugs": {
        "url": "https://github.com/itgalaxy/robotstxt-webpack-plugin/issues"
    },
    "main": "dist/RobotstxtWebpackPlugin.js",
    "files": [
        "dist",
        "!**/__tests__"
    ],
    "dependencies": {
        "generate-robotstxt": "^4.0.0",
        "nodeify": "~1.0.0"
    },
    "devDependencies": {
        "ava": "^0.18.0",
        "ajv-cli": "^1.1.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.11.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "del-cli": "^0.2.0",
        "eslint": "^3.15.0",
        "eslint-plugin-ava": "^4.0.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^43.0.0",
        "eslint-plugin-jsx-a11y": "^4.0.0",
        "eslint-plugin-lodash": "^2.1.0",
        "eslint-plugin-node": "^4.0.0",
        "eslint-plugin-promise": "^3.3.0",
        "eslint-plugin-react": "^6.5.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^4.0.0",
        "nyc": "^10.0.0",
        "package-schema": "^1.0.0",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "webpack": "^2.2.1"
    },
    "peerDependencies": {
        "webpack": "^1.13.2 || ^2.2.1"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l --parallel lint:*",

        "pretest": "npm run lint",
        "ava": "nyc ava --verbose \"src/**/__tests__/*.js\"",
        "test": "npm run ava",

        "prebuild": "del dist",
        "build": "babel src --out-dir dist --ignore /__tests__/",

        "prepublish": "npm run build",
        "release": "npmpub"
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    }
}
